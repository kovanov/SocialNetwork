@{
    ViewBag.Title = "Index";
}

<h2>&nbsp;</h2>
@if (TempData["Result"] != null)
{
    <div class="row">
        <label class="col-sm-6 col-sm-offset-4 danger">@TempData["Result"].ToString()</label>
    </div>
}
@using (Html.BeginForm("Users", "Profile", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <div class="container">
            <div class="row">
                <div class="col-sm-3 hidden-xs">&nbsp;</div>
                <div class="col-sm-6">
                    <div class="col-xs-9">
                        @Html.TextBox("userQuery", string.Empty, new { @class = "form-control", placeholder = "Найти пользователя" })
                    </div>
                    <div class="col-xs-3">
                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </div>
                </div>
                <div class="col-sm-3 hidden-xs">&nbsp;</div>
            </div>
        </div>
    </div>
}

@Html.Partial("_UsersSearchResults")


